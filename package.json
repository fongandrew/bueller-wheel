{
	"name": "bueller-wheel",
	"version": "0.3.2",
	"description": "Headless Claude Code issue processor - A wrapper that runs Claude Code in a loop to process issues from a directory queue",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"bueller-wheel": "dist/index.js"
	},
	"scripts": {
		"build": "rm -rf dist out && tsc && mkdir -p dist && cp out/src/*.js dist/ && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/index.tmp && mv dist/index.tmp dist/index.js && chmod +x dist/index.js",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"test": "tsx tests/test-runner.ts",
		"typecheck": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write ."
	},
	"keywords": [
		"claude",
		"claude-code",
		"automation",
		"ai",
		"issue-tracker",
		"task-automation",
		"agent"
	],
	"author": "Andrew Fong <id@andrewfong.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fongandrew/bueller-wheel.git"
	},
	"bugs": {
		"url": "https://github.com/fongandrew/bueller-wheel/issues"
	},
	"homepage": "https://github.com/fongandrew/bueller-wheel#readme",
	"files": [
		"dist/*.js",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@anthropic-ai/sdk": "^0.71.0",
		"@eslint/js": "^9.30.1",
		"@types/node": "^24.0.10",
		"@typescript-eslint/parser": "^8.47.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.3.0",
		"install": "^0.13.0",
		"npm": "^11.6.4",
		"prettier": "^3.6.2",
		"tsx": "^4.19.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.47.0"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.1.55"
	}
}
